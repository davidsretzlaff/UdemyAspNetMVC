@model IEnumerable<learnaspnet.Models.Filme>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filmes</h2>
<table class="table table-bordered table-hover">
    <thead >
        <tr>
            <th>Filme</th>
            <th>Genero</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var filme in Model)
        {
            <tr>
                <td>@Html.ActionLink(filme.Nome, "Details", "Filme", new {id = filme.Id}, null)</td>
                <td>@filme.Genero.Nome</td>
            </tr>
        }
    </tbody>
</table>

